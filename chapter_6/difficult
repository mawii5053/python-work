'martha':'ogun', 
'victoria':'kalabari',
'silver':'igbo',
'razaki':'yoruba'
}
for name in staffs_tribes.keys():
    print(name.title())  
staffs_tribes = {
'martha':'ogun', 
'victoria':'kalabari',
'silver':'igbo',
'razaki':'yoruba'
}
pals = ['razaki', 'silver']
for name in staffs_tribes.keys():
    print(name.title())
    if name in pals:
        tribe = staffs_tribes[name].title()
        print(f"\t{name.title()}, i see you love {tribe}")

